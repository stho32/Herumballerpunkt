{
  "source": {
    "include": [
      "./src/",
      "./README-MODULAR.md"
    ],
    "includePattern": "\\.(js|md)$",
    "exclude": [
      "./src/**/*.test.js",
      "./src/**/*.spec.js",
      "./node_modules/"
    ]
  },
  "opts": {
    "destination": "./docs/",
    "recurse": true,
    "readme": "./README-MODULAR.md"
  },
  "plugins": [
    "plugins/markdown"
  ],
  "templates": {
    "cleverLinks": false,
    "monospaceLinks": false
  },
  "metadata": {
    "title": "Herumballerpunkt - Modular Architecture API Documentation",
    "version": "1.0.0"
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
